<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sicomre</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Bebas+Neue&family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/styles.css"> <!-- Enlace al archivo CSS -->
    <link rel="stylesheet" href="css/acudiente.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css"/>
     <!-- Default theme -->
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/default.min.css"/>
         <!-- Enlace al archivo CSS -->
    <link rel="stylesheet" href="css/acudiente.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        .modal-body .mb-3 label {
            text-align: left;
            display: block;
            width: 100%;
        }
        .fa-eye {
            cursor: pointer;
        }
        body{
            background-color: #063780;
        }
        .fila-inactiva { /* Clase para filas inactivas */
            background-color: gray; /* Color de fondo gris */
        }
    </style>
</head>
<body>
    <header></header>
    <nav></nav>
    <main>
        <!-- Registro de Rutas -->
        <section id="ruta" class="my-4">
            <div class="info-card">
                <input type="text" id="busqueda" placeholder="Buscar por placa" class="form-control mb-3">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2><i class="fas fa-road"></i> Registro de Rutas</h2>
                    <button id="btnCrear" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalRuta"><i class="fas fa-plus"></i> Registrar Ruta</button>
                </div>
                <table id="rutaTable" class="table">
                    <thead>
                        <tr>
                            <th>Id Ruta</th>
                            <th>Placa Ruta</th>
                            <th>Dirección de Paradas</th>
                            <th>Número de Paradas</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div id="modalRuta" class="modal fade" tabindex="-1" aria-labelledby="modalRutaLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <h1 class="modal-title fs-5" id="modalRutaLabel">Registrar Ruta</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form id="formRuta">
                                    <div class="mb-3">
                                        <label for="placaRuta" class="col-form-label">Placa Ruta:</label>
                                        <input id="placaRuta" name="placaRuta" type="text" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="direccionParadas" class="col-form-label">Dirección de Paradas:</label>
                                        <input id="direccionParadas" name="direccionParadas" type="text" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="numeroParadas" class="col-form-label">Número de Paradas:</label>
                                        <input id="numeroParadas" name="numeroParadas" type="number" class="form-control" required>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                        <button type="submit" class="btn btn-primary" form="formRuta">Guardar</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>                    
                </div>
            </div>
        </section>
    </main>
    <footer></footer>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!--Alert-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="JS/crudRScript.js"></script> 
    <script src="JS/script3.js"></script>
</body>
</html>
